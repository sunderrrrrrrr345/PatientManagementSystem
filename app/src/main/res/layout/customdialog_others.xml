<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_doctor_list_corner">
    <include layout="@layout/actionbar_doctor_list"></include>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/actionbar_top"
        android:padding="@dimen/home_screen_padding">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view_visitor_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/home_screen_padding"
            android:padding="@dimen/home_screen_padding"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardElevation="@dimen/cardElevation"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp">


            <EditText
                android:id="@+id/ed_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="Others"
                android:inputType="number"
                android:textColorHint="@color/edittextcolor"
                android:textColor="@color/edittextcolor"
                android:padding="@dimen/home_screen_padding" />

        </android.support.v7.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/card_view_visitor_submit"
                android:weightSum="2">


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_visitor_done"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/home_screen_padding"
                    android:padding="@dimen/home_screen_padding"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/button_color"
                    android:gravity="center"
                    android:padding="@dimen/home_screen_padding"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:textSize="@dimen/event_title_text_size" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_visitor_back"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/home_screen_padding"
                    android:padding="@dimen/home_screen_padding"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    app:cardElevation="@dimen/cardElevation"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">
                <TextView
                    android:id="@+id/tv_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/button_color"
                    android:gravity="center"
                    android:padding="@dimen/home_screen_padding"
                    android:text="Back"
                    android:textColor="#fff"
                    android:textSize="@dimen/event_title_text_size" />

        </android.support.v7.widget.CardView>
            </LinearLayout>
    </RelativeLayout>


</RelativeLayout>

